.message
  .message__update-info
    %p.message__update-info__talker
      = message.user.name
    %p.message__update-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lowewr-message
    - if message.message.present?
      %p.message__text 
        = message.message
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?























