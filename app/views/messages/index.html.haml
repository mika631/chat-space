.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name hiroshi
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path do
            %i.fa.fa-edit
        %li.side-header__box__menu__new-edit-user
          = link_to edit_user_path(current_user)  do
            %i.fa.fa-cog
  .groups
    = link_to "https://chat-space-sample.herokuapp.com/groups/1037/messages"  do
      .group
        %p.group__group-name aooni
        %p.group__latest-message まだメッセージがありません
.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group aooni
      %ul.main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list__member mika
        %li.main-header__left-box__member-list__member nike
    = link_to "/groups/1137/edit" do
      .main-header__edit-btn Edit
  .messages
    .message
      .message__update-info
        %p.message__update-info__talker takeshi
        %p.message__update-info__date 2019/09/09(fri)00:11:11
      %p.message__text buruburu
  .form
    .form__new-message
      .input-box
        %input#message_content.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}/
        %label.input-box__image{for: "message_image"} 
          %i.fa.fa-image
        %label#input#message_image.input-box__image__file{name: "message[image]", type: "file"}/
      %input.submit-btn{"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"}/
